/* pages/serve-order/index.wxss */

.container{
  width: 100%;
  height: 100%;
  position: absolute;
  background:rgba(245,245,245,1);
}

.row{
  margin: 0 auto;
  width: 90%;
}

.item{
  width: 100%;
  background:rgba(255,255,255,1);
  margin-top: 20rpx;
}

.list{
  height:362rpx;
 position: relative;
 display: block;
}
.title{
  line-height: 80rpx;
  font-size:28rpx;
   padding: 0 5%;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(26,26,26,1);
  border-bottom:1rpx solid rgba(239,239,239,1); 
}

.desc{
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  width: 90%;
  margin-top: 20rpx;
}

.shuigu{
  width:459rpx;
font-size:28rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(17,17,17,1);
line-height:32rpx;
margin-left: 20rpx;
}

.descImg{
  width:140rpx;
height:140rpx;
background:rgba(255,255,255,1);
border-radius:10rpx;

}

.x{
  font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
}

.out{
  font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(26,26,26,1);
display: block;
}

.height{
  display: block;
  height: 94rpx;
}

.bottom{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-top:1rpx solid rgba(239,239,239,1); 
  align-items: center;
  position: absolute;
  width: 100%;
  justify-content:flex-end;
  bottom: 0;
}

.btn{
  width:160rpx;
height:60rpx;
background:rgba(255,255,255,1);
border-radius:10rpx;
text-align: center;
line-height: 60rpx;
font-size:28rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
border:1rpx solid rgba(202,202,202,1);
margin-right: 5%;
}