/* pages/search/index.wxss */

.row{
  width: 90%;
  margin: 0 auto;
}

.main{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.search{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 30rpx;
  top: 15rpx;
}

.poser{
  position: relative;
  margin-top: 30rpx;
    display: flex;
  
  align-items: center;
  flex-direction: row;
}

.search-input{
  width:530rpx;
height:60rpx;
padding-left:70rpx; 
background:rgba(245,245,245,1);
border-radius:33rpx;

}

.search-text{
  font-size:30rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(46,145,9,1);
margin-top: 20rpx;
}

.placeholder{
  font-size:30rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(209,209,209,1);
}

.hot{
  font-size:30rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(17,17,17,1);
margin-top: 60rpx;
margin-bottom: 20rpx;
}

.text-name{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.gjc{
  background:rgba(245,245,245,1);
border-radius:10rpx;
padding:15rpx 24rpx;
margin-right: 20rpx;
font-size:28rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
margin-top: 20rpx;
}